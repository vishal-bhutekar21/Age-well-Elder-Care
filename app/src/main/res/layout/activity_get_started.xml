<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0FDFA"
    android:orientation="vertical"
    tools:context=".GetStartedActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/app_heading"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:src="@drawable/imggetstart"
        android:layout_height="350dp"/>

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#0F766E"
        android:gravity="center"
        android:text="Start Your Healthier Journey with AgeWell!"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/descriptionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:text="Sign up now and take control of your \nwell-being"
        android:textColor="#8C8C8C"
        android:layout_marginTop="10dp" />



    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Get Started"
        android:textSize="16dp"
        android:id="@+id/id_btn_getstarted"
        style="@style/Widget.MaterialComponents.Button"
        android:backgroundTint="#0F766E"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        app:cornerRadius="8dp"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:weightSum="2">
        
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:src="@drawable/ic_security"/>
        <TextView
            android:layout_width="140dp"
            android:layout_height="22dp"
            android:layout_marginLeft="5dp"
            android:textColor="#4B5563"
            android:textStyle="bold"
            android:text="@string/secure_private"/>
    </LinearLayout>

</LinearLayout>