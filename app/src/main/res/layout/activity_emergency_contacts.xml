<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Emergency_Contacts">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/white">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/menuButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_centerVertical="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_menu" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="56dp"
                    android:text="Emergency Contacts"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:id="@+id/morningTasksLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F1F5F9"
        android:layout_margin="15dp"
        android:padding="12dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/call_vector"
            android:layout_marginTop="10dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Person One"
                android:textColor="#64748B"
                android:textSize="16sp" />

            <EditText
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_marginStart="12dp"
                android:id="@+id/num_person_one"
                android:text="8812321632"
                android:background="@drawable/empty_shape"
                android:textColor="@android:color/black"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_edit"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="10dp"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_delete"
                android:layout_marginTop="10dp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F1F5F9"
        android:layout_margin="15dp"
        android:padding="12dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/call_vector"
            android:layout_marginTop="10dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Person Two"
                android:textColor="#64748B"
                android:textSize="16sp" />

            <EditText
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_marginStart="12dp"
                android:id="@+id/num_person_two"
                android:text="8812321632"
                android:background="@drawable/empty_shape"
                android:textColor="@android:color/black"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_edit"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="10dp"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_delete"
                android:layout_marginTop="10dp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F1F5F9"
        android:layout_margin="15dp"
        android:padding="12dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/call_vector"
            android:layout_marginTop="10dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Person Three"
                android:textColor="#64748B"
                android:textSize="16sp" />

            <EditText
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_marginStart="12dp"
                android:id="@+id/num_person_three"
                android:text="8812321632"
                android:background="@drawable/empty_shape"
                android:textColor="@android:color/black"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_edit"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="10dp"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/call_vector"
                android:layout_marginTop="10dp"/>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:layout_width="340dp"
        android:layout_height="56dp"
        android:id="@+id/id_send_live_location"
        android:text="Send Live Location"
        android:backgroundTint="#0D9488"
        android:drawableLeft="@drawable/ic_msg"
        android:layout_margin="15dp"
        android:textSize="20dp"
        android:layout_gravity="center"
        />

    <Button
        android:layout_width="340dp"
        android:layout_height="56dp"
        android:id="@+id/id_btn_emergencycall"
        android:text="Emergency Call"
        android:backgroundTint="#0D9488"
        android:drawableLeft="@drawable/call_vector"
        android:layout_margin="15dp"
        android:textSize="20dp"
        android:layout_gravity="center"
        />


</LinearLayout>