<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="?attr/colorSurface">

    <!-- Card Container for Better UI -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:strokeWidth="1dp"
        android:outlineSpotShadowColor="@color/primary"
        android:outlineAmbientShadowColor="@color/primary"
        app:strokeColor="@color/accent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                >
                <ImageView
                    android:layout_margin="5dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/hospitallll"
                    />
                <TextView
                    android:id="@+id/nameTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hospital Name"
                    android:layout_margin="5dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/primary"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    android:textStyle="bold"
                 />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"

                >
                <ImageView
                    android:id="@+id/hospitalImageView"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/hospital"
                    android:contentDescription="Hospital Image"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Hospital Image -->


                    <!-- Name -->


                    <!-- Display Name -->
                    <TextView
                        android:id="@+id/displayNameTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Specialized Healthcare Center"
                        android:textAppearance="?attr/textAppearanceBody1"
                        android:textColor="?attr/colorOnSurface"
                        android:paddingTop="4dp"/>



                </LinearLayout>

                <!-- Navigation Button -->



            </LinearLayout>

            <TextView
                android:id="@+id/distanceTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Disatnce"
                android:layout_marginLeft="10dp"
                android:textColor="@color/primary"
                android:fontFamily="sans-serif-condensed-medium"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textStyle="bold"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/startNavigatingButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Start Navigating"
                android:layout_marginTop="12dp"
                app:cornerRadius="8dp"
                android:padding="10dp"
                app:icon="@drawable/ic_navigation"
                app:iconPadding="8dp"
                app:iconGravity="start"
                android:layout_margin="10dp"
                app:backgroundTint="@color/primary"
                app:rippleColor="?attr/colorPrimaryVariant"/>

        </LinearLayout>



    </com.google.android.material.card.MaterialCardView>

</LinearLayout>
